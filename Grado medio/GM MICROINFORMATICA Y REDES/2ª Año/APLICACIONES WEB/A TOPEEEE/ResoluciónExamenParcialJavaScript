//Ejercicio3
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Par o Impar</title>
</head>
<body>
<strong>Par o Impar</strong><br>
<script>
  

	function parimpar(numero) 
	{

		if(numero % 2 == 0) //if (numero==%2)
		{
			return "par";
		}
		else 
		{
			return "impar";
		}
	}
	

var numero = parseInt(prompt("Introduce un número entero"));
var resultado=parimpar(numero);
document.write("el número introducido es: "+resultado);
</script>

</body>
</html>



