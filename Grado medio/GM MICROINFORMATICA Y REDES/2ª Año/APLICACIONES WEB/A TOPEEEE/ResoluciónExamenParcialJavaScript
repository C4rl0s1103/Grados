<script>
//Ejercicios Examen Parcial JavaScript
//Ejercicio6
		function vuelta(palabra){
		
			var delreves;
			for(largo=palabra.length;largo>=0;largo--){
				delreves=delreves+palabra.charAt(largo);
			}
			document.write(delreves);
			return delreves;
		}
		
		var palabra;
		palabra=prompt("Introduce una cadena");
		var resultado=vuelta(palabra);
		
		if (palabra==delreves)
		{
		document.write("son iguales");
		}


</script>

</body>
</html>