//Ejercicio3
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Comparar Cadenas</title>
</head>
<body>
<strong>Cual es más larga</strong><br>
<script>
  

	function comparar(cadena1, cadena2) 
	{

			
		if(cadena1.length() == cadena2.length()) 	
		{
			document.write(" las cadenas tienen la misma longitud");
		}
		else if(cadena1.length() > cadena2.length()) 
			{
				document.write(" las cadena1"+cadena1+ "es más larga que la cadena 2"+cadena2);
			}
			else 
			{
				document.write(" las cadena2"+cadena2+ "es más larga que la cadena 1"+cadena1);
			}
	}

var cadena1;
var cadena2;
cadena1 = prompt("introduzca la primera cadena");
cadena2 = prompt("introduzca la segunda cadena");
comparar(cadena1, cadena2);

</script>


<body>

</body>
</html>





