//Ejercicio4
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Factorial</title>
</head>
<body>
<strong>Factorial</strong><br>
<script>
  

function factorial(n) 
{
	var total = 1; 
	for (i=1; i<=n; i++) {
		total = total * i; 
	}
	return total; 
}

var x=0;
while (n<1 || n>25 || x>=3)
{
	n = parseInt(prompt("introduzca el número del que desea hallar el factorial, tiene que estar entre 1 y 25");)
	x++;
}
 factorial(n);

</script>
</body>
</html>



